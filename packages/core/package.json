{
  "name": "@mcp-toolkit/core",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "description": "Core MCP Toolkit functionality - hook system for contextual LLM guidance",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@mcp-toolkit/model": "workspace:*",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@mcp-toolkit/typescript-config": "workspace:*",
    "@mcp-toolkit/vitest-config": "workspace:*",
    "@types/node": "^25.0.8",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "mcp",
    "hooks",
    "workflows"
  ]
}

{
  "name": "@mcp-toolkit/mcp",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "bin": {
    "mcp-toolkit": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --stdio",
    "start:http": "node dist/index.js --http",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@mcp-toolkit/model": "workspace:*",
    "@mcp-toolkit/provider": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@mcp-toolkit/typescript-config": "workspace:*",
    "@mcp-toolkit/vitest-config": "workspace:*",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}

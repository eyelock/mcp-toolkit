{
  "name": "@mcp-toolkit/toolkit",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "description": "Guided onboarding workflow demonstrating MCP Specification features",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    }
  },
  "files": [
    "dist",
    "src/hooks/*.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@mcp-toolkit/core": "workspace:*",
    "@mcp-toolkit/mcp": "workspace:*"
  },
  "devDependencies": {
    "@mcp-toolkit/typescript-config": "workspace:*",
    "@mcp-toolkit/vitest-config": "workspace:*",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "mcp",
    "toolkit",
    "onboarding",
    "workflow"
  ]
}
